# --- Saltbox / System Configuration ---
PUID=1000
PGID=1000
TZ=Europe/London
DOMAINNAME=example.com

# --- Sagarr Configuration ---
# The public URL where Sagarr is accessible (used for auth redirects)
FRONTEND_URL=https://sagarr.example.com

# Security (CHANGE THIS!)
SECRET_KEY=change_me_to_a_random_string

# Database
DATABASE_URL=sqlite:///./data/sagarr.db

# --- Integrations (Optional defaults, can be set in Admin UI) ---
# Tautulli
TAUTULLI_URL=http://tautulli:8181
TAUTULLI_API_KEY=

# Overseerr
OVERSEERR_URL=http://overseerr:5055
OVERSEERR_API_KEY=

# AI Provider (openai, generic, etc.)
AI_PROVIDER=openai
AI_API_KEY=
AI_MODEL=gpt-4o

# TMDb (Required for metadata)
TMDB_API_KEY=
